<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/llRow_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/book_2020" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dt_index_row_tv_dtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DTTitle"
            android:textSize="@dimen/dt_index_txt_size_22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_index_row_tv_EntryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DTTitle"
            android:textColor="@color/black"
            android:textSize="14sp"
          />

        <!--<TextView
            android:id="@+id/dt_index_row_tv_AwardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Award Name"
            android:textSize="@dimen/dt_index_txt_size_22" />-->

        <!--<TextView
            android:id="@+id/dt_index_row_tv_ProgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program Name"
            android:textSize="@dimen/dt_index_txt_size_22" />-->

        <!--<TextView
            android:id="@+id/dt_index_row_tv_ActivityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ActivityTitle"
            android:textSize="@dimen/dt_index_txt_size_22" />-->
    </LinearLayout>

    <LinearLayout

        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dt_index_res_total_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/dt_index_txt_size_27" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dt_index_row_ibtn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/add_survey_selector" />

        <ImageView
            android:id="@+id/dt_index_row_ibtn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/view_reports_selector" />
    </LinearLayout>
</LinearLayout>